# ===========================================
# LOCAL DEVELOPMENT (default values)
# ===========================================

# Database (PostgreSQL)
DATABASE_URL="postgresql://root:root@localhost:5432/postgres?schema=public"

# API
NEXT_PUBLIC_API_URL=http://localhost:3000

# Redis Configuration (BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_QUEUE_NAME="test"

# Bull Board Dashboard
BULL_BOARD_PORT=3001
NEXT_PUBLIC_BULL_BOARD_PASSWORD=admin123
NEXT_PUBLIC_BULL_BOARD_URL=http://localhost:3001

# ===========================================
# DOCKER COMPOSE (override in environment)
# These are automatically set in docker-compose.yml
# ===========================================
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/endeavour?schema=public
# REDIS_HOST=redis
# REDIS_PORT=6379

# ===========================================
# PRODUCTION (set these in your deployment)
# ===========================================
# DATABASE_URL="postgresql://user:password@your-db-host:5432/endeavour?schema=public"
# REDIS_HOST=your-redis-host
# REDIS_PASSWORD="your-redis-password"
# REDIS_QUEUE_NAME="production"
# NEXT_PUBLIC_BULL_BOARD_PASSWORD="your-secure-password"
